<Window x:Class="ExcelToXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelToXML"
        WindowStyle="ToolWindow"
        mc:Ignorable="d"
        Title="EXCEL with products to XML. [NOV/2018]" Height="450" Width="800" MinWidth="350" MinHeight="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Excel file, including full path:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="10,41,10,0" TextWrapping="Wrap" Text="{Binding Path=FileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" IsEnabled="{Binding Path=ReadyToRun}" />

        <Button Content="Convert" Command="{Binding Path=NewXmlCommand}" x:Name="btnGo" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" IsEnabled="{Binding Path=NewXmlCommandCanExecute}" Width="292"/>
        
        <TextBox Margin="10,117,10,10" TextWrapping="Wrap" Text="{Binding Path=Log, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" />
    </Grid>
</Window>
